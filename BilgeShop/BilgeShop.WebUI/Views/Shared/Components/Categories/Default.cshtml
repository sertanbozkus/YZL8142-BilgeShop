@model List<CategoryViewModel>


<div class="list-group">


  <a asp-controller="Home" asp-action="Index" asp-route-categoryId="" asp-route-categoryName="" class="fw-bold list-group-item">Tüm Ürünler</a>



  @foreach (var c in Model)
  {
      <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@c.Id" asp-route-categoryName="@c.Name" class="list-group-item">@c.Name</a>
  }



</div>

    
  