@model List<ProductViewModel>

<div class="row">

    @if (Model.Any()) // Model.Count     != 0
    {


        @foreach (var p in Model)
        {
            <div class="col-sm-12 col-md-3 col-lg-4 col-xl-3  mb-3">

                <div class="card shadow-sm">

                    <div class="card-header" style="width:100%"> 
                   
                   @if(!string.IsNullOrWhiteSpace(p.ImagePath))
                    {
                        <img style="width:100%; height:225px"  src="~/Images/Products/@p.ImagePath" />
                    }
                    else
                    {
                        <img style="width:100%; height:225px" src="~/Images/NoImage.jpg"/>
                    }

                    </div>

                    <div class="card-body">
                        <p class="card-text fw-bold">@p.Name</p>
                        <p class="card-text fw-bold" style="color:darkred">@p.UnitPrice TL</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                               <a asp-controller="Product" asp-action="Detail" asp-route-id="@p.Id" class="btn btn-sm btn-success">İncele</a>
                            </div>
                           
                        </div>
                    </div>
                </div>

            </div>
        }

    }
    else
    {
        <div class="alert alert-danger fw-bold">

            Bu kategoride ürün yok!

        </div>
    }



</div>